<h2>Create A New Discount</h2>

<%= form_tag '/merchant/discounts' do %>
  <%= label_tag 'Description of Discount: '%>
  <%= text_field_tag :description %>

  <%= label_tag 'Quantity of minimum items needed for the discount: '%>
  <%= number_field_tag :quantity %>

  <%= label_tag 'Percent Off: '%>
  <%= number_field_tag :percent %>

  <%= submit_tag 'Submit Discount' %>
<% end %>
